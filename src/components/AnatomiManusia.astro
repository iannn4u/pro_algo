>
    <!-- Gambar Anatomi -->
    <div
        class="relative grid place-items-center w-full md:w-[45%] animate__animated animate__fadeInLeft"
    >
        <img src="/anatomiManusia.png" class="w-full pt-10" />
        <!-- Tooltip untuk Usus Besar -->
        <div
            class="bg-white size-2 rounded-full absolute top-[24.5rem] right-[15rem]"
            data-tooltip-target="ususBesar"
            data-tooltip-style="light"
        >
        </div>
        <div
            id="ususBesar"
            role="tooltip"
            class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 tooltip"
        >
            Usus Besar
            <div class="tooltip-arrow" data-popper-arrow></div>
        </div>

        <!-- Tooltip untuk Pankreas -->
        <div
            class="bg-white size-2 rounded-full absolute top-[20rem] right-[17rem]"
            data-tooltip-target="Hati Manusia"
            data-tooltip-style="light"
        >
        </div>
        <div
            id="Hati Manusia"
            role="tooltip"
            class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 tooltip"
        >
            Hati
            <div class="tooltip-arrow" data-popper-arrow></div>
        </div>

        <!-- Tooltip untuk Lambung -->
        <div
            class="bg-white size-2 rounded-full absolute top-[21rem] right-[13rem]"
            data-tooltip-target="lambung"
            data-tooltip-style="light"
        >
        </div>
        <div
            id="lambung"
            role="tooltip"
            class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 tooltip"
        >
            Lambung
            <div class="tooltip-arrow" data-popper-arrow></div>
        </div>

        <!-- Tooltip untuk Kerongkongan -->
        <div
            class="bg-white size-2 rounded-full absolute top-[14rem] right-[15.2rem]"
            data-tooltip-target="kerongkongan"
            data-tooltip-style="light"
        >
        </div>
        <div
            id="kerongkongan"
            role="tooltip"
            class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 tooltip"
        >
            Kerongkongan
            <div class="tooltip-arrow" data-popper-arrow></div>
        </div>

        <!-- Tooltip untuk Mulut -->
        <div
            class="bg-white size-2 rounded-full absolute top-[9.5rem] right-[17rem]"
            data-tooltip-target="Mulut"
            data-tooltip-style="light"
        >
        </div>
        <div
            id="Mulut"
            role="tooltip"
            class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 tooltip"
